@model PersonelMVCUI.Models.EntityFramework.Departman
@{
    ViewBag.Title = "Yeni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Kaydet", "Departman", FormMethod.Post))
{
    @Html.AntiForgeryToken() 
    <div class="form-group">
        @Html.LabelFor(m => m.Ad)
        @Html.TextAreaFor(m => m.Ad, new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.Ad)
    </div>
    @Html.HiddenFor(m=>m.Id)
    <button type="submit" class="btn btn-success">Kaydet</button>
}
